<div data-role="header">
  <h1>Goal details</h1>
</div>
<div data-role="main" class="ui-content">
  <div style="text-align:center">
    <h2> <%= @goal.title %> </h2>
    <%= image_tag(@goal.image, width: 200) %>
    <br />
    <p> <%= @goal.description %> </p>
    <%= link_to 'Challenge Accepted!', {controller: 'user_goals' , action: 'create' , id: @goal.id} ,
                method: :post,
                class: 'ui-btn ui-icon-check ui-btn-icon-right'  %>
    <a href="../goals" class="ui-btn ui-icon-delete ui-btn-icon-right">No, thanks.</a>
  </div>
</div>